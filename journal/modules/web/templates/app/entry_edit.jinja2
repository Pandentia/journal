{% extends "app/container.jinja2" %}
{% block container %}
    <!--suppress HtmlUnknownTarget -->
    <form action="" method="post">
        <button class="btn btn-outline-primary mx-1" type="submit">Save & View</button>
        <hr class="my-2" />
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" name="title" id="title" type="text" value="{{ entry.title | escape }}">
        </div>
        <div class="form-group">
            <label for="body">Content</label>
            <textarea class="form-control" name="body" id="body"
                      rows="{{ len(entry.content.split('\n')) + 5 }}">{{ entry.content | escape }}</textarea>
            <small class="text-muted">This field supports
                <a href="https://daringfireball.net/projects/markdown/syntax">markdown</a> (without inline HTML).</small>
        </div>
    </form>
{% endblock %}
